<div id="app"></div>
<div id="create-new-post-forms-id" class="signed-in-view col-xs-8">

    <div class="create-new-post-forms-header">
      <h2>Create New Post</h2>
    </div>

    <div class="create-new-post-forms-body">

      <form id="create-new-post-forms-submit" class="form-inline">
        <div class="form-group">
          <label for="post-description">Post Parent Page*</label>
          <input id="post-description-input-id" type="text" name="post[_page]" class="form-control" hidden required>
        </div>
        <div class="form-group">
          <label for="post-title">Post Title*</label>
          <input id="post-title-input-id" type="text" name="post[title]" class="form-control" autofocus required>
        </div>
        <br>
        <div class="form-group">
          <label for="post-description">Post Description*</label>
          <input id="post-description-input-id" type="text" name="post[description]" class="form-control" required>
        </div>
        <br>
        <div class="form-group">
          <label for="post-description">Post Content*</label>
          <input id="post-description-input-id" type="text" name="post[description]" class="form-control" required>
        </div>
        <div class="form-group create-new-post-buttons-div">
          <button id="create-post" type="submit" class="btn btn-success submit-button-class">Create</button>
          <button type="submit" class="btn btn-warning submit-button-class">Cancel</button>
        </div>
    </form>

  </div>
</div>
